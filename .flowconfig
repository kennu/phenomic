[version]
0.42.0

[libs]
./flow/interfaces/

[ignore]
.*/node_modules/.*
.*/docs/node_modules/.*
.*/test-setup/.*
.*/lib/.*
.*/coverage/.*
.*/__tests__/_output/.*
.*/dist/.*
.*/docs/.*
.*\.md
<PROJECT_ROOT>/scripts
<PROJECT_ROOT>/npm
<PROJECT_ROOT>/e2e-tests
<PROJECT_ROOT>/themes
# 1.0 won't use the code in src
<PROJECT_ROOT>/src

[options]
all=true
esproposal.class_instance_fields=enable
esproposal.class_static_fields=enable

# packages/phenomic-*
module.name_mapper='^phenomic\([a-z-]+\)\/lib\/\(.*\)$' -> '<PROJECT_ROOT>/packages/phenomic\1/src/\2'
module.name_mapper='^phenomic\([a-z-]*\)$' -> '<PROJECT_ROOT>/packages/phenomic\1/src'
